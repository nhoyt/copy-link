{
  "manifest_version": 2,
  "name": "Copy Link",
  "version": "1.0",
  "description" : "Insert the title and URL of the current page into the selected link format, and copy the result to the clipboard, for pasting into an external document.",

  "icons": {
    "48": "copy-to-clipboard.png"
  },

  "browser_action": {
    "default_icon": "copy-to-clipboard.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "clipboardWrite",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "copy-link@gitlab.com"
    }
  }
}
