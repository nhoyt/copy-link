{
  "manifest_version": 2,
  "name": "Copy Link",
  "version": "1.0",
  "description" : "Builds a formatted string that represents a link to the current page, and copies it to the clipboard.",

  "icons": {
    "48": "copy-to-clipboard.png"
  },

  "browser_action": {
    "default_icon": "copy-to-clipboard.png"
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "copy-link@gitlab.com"
    }
  }
}
